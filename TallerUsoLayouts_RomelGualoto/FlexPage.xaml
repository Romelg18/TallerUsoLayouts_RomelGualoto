<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TallerUsoLayouts_RomelGualoto.FlexPage"
             Title="Flex Layout">
    <FlexLayout Direction="Column" AlignItems="Start">
        <Frame Padding="5" Margin="5">
            <StackLayout Orientation="Horizontal">
                <Image Source="image1.png" WidthRequest="50" HeightRequest="50" />
                <Label Text="Elemento 1" VerticalOptions="Center" />
            </StackLayout>
        </Frame>
        <Frame Padding="5" Margin="5">
            <StackLayout Orientation="Horizontal">
                <Image Source="image2.png" WidthRequest="50" HeightRequest="50" />
                <Label Text="Elemento 2" VerticalOptions="Center" />
            </StackLayout>
        </Frame>
        <Frame Padding="5" Margin="5">
            <StackLayout Orientation="Horizontal">
                <Image Source="image3.png" WidthRequest="50" HeightRequest="50" />
                <Label Text="Elemento 3" VerticalOptions="Center" />
            </StackLayout>
        </Frame>
    </FlexLayout>
</ContentPage>
